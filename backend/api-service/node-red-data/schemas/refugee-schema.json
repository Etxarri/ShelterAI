{
"$schema": "http://json-schema.org/draft-07/schema#",
"title": "Refugee",
"type": "object",
"required": ["first_name", "last_name", "age"],
"properties": {
"first_name": {
    "type": "string",
    "minLength": 1,
    "maxLength": 100,
    "description": "Nombre"
},
"last_name": {
    "type": "string",
    "minLength": 1,
    "maxLength": 100,
    "description": "Apellido"
},
"age": {
    "type": "integer",
    "minimum": 0,
    "maximum": 150,
    "description": "Edad del refugiado"
},
"gender": {
    "type": "string",
    "enum": ["MALE", "FEMALE", "OTHER", "UNKNOWN"],
    "description": "Género"
},
"nationality": {
    "type": "string",
    "maxLength": 100,
    "description": "Nacionalidad"
},
"languages_spoken": {
    "type": "string",
    "maxLength": 200,
    "description": "Idiomas hablados (separados por coma)"
},
"phone_number": {
    "type": "string",
    "pattern": "^[+]?[0-9\\s\\-()]+$",
    "maxLength": 20,
    "description": "Número de teléfono"
},
"email": {
    "type": "string",
    "format": "email",
    "maxLength": 100,
    "description": "Email de contacto"
},
"family_id": {
    "type": ["integer", "null"],
    "description": "ID de la familia (si pertenece a una)"
},
"medical_conditions": {
    "type": "string",
    "maxLength": 500,
    "description": "Condiciones médicas"
},
"special_needs": {
    "type": "string",
    "maxLength": 500,
    "description": "Necesidades especiales"
},
"vulnerability_score": {
    "type": "number",
    "minimum": 0,
    "maximum": 10,
    "description": "Puntuación de vulnerabilidad (0-10)"
},
"education_level": {
    "type": "string",
    "enum": ["NONE", "PRIMARY", "SECONDARY", "UNIVERSITY", "POSTGRADUATE"],
    "description": "Nivel educativo"
},
"employment_status": {
    "type": "string",
    "enum": ["UNEMPLOYED", "EMPLOYED", "STUDENT", "RETIRED", "UNABLE_TO_WORK"],
    "description": "Estado laboral"
},
"registration_date": {
    "type": "string",
    "format": "date",
    "description": "Fecha de registro (YYYY-MM-DD)"
}
},
"additionalProperties": false
}
