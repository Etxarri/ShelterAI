{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Shelter",
    "type": "object",
    "required": ["name", "max_capacity"],
    "properties": {
        "name": {
        "type": "string",
        "minLength": 1,
        "maxLength": 100,
        "description": "Nombre del albergue"
        },
        "address": {
        "type": "string",
        "maxLength": 500,
        "description": "Dirección del albergue"
        },
        "phone_number": {
        "type": "string",
        "pattern": "^[+]?[0-9\\s\\-()]+$",
        "maxLength": 20,
        "description": "Número de teléfono"
        },
        "email": {
        "type": "string",
        "format": "email",
        "maxLength": 100,
        "description": "Email de contacto"
        },
        "max_capacity": {
        "type": "integer",
        "minimum": 1,
        "maximum": 10000,
        "description": "Capacidad máxima del albergue"
        },
        "current_occupancy": {
        "type": "integer",
        "minimum": 0,
        "description": "Ocupación actual"
        },
        "has_medical_facilities": {
        "type": "boolean",
        "description": "¿Tiene instalaciones médicas?"
        },
        "has_childcare": {
        "type": "boolean",
        "description": "¿Tiene cuidado infantil?"
        },
        "has_disability_access": {
        "type": "boolean",
        "description": "¿Tiene acceso para personas con discapacidad?"
        },
        "languages_spoken": {
        "type": "string",
        "maxLength": 200,
        "description": "Idiomas hablados (separados por coma)"
        },
        "latitude": {
        "type": "number",
        "minimum": -90,
        "maximum": 90,
        "description": "Latitud geográfica"
        },
        "longitude": {
        "type": "number",
        "minimum": -180,
        "maximum": 180,
        "description": "Longitud geográfica"
        },
        "shelter_type": {
        "type": "string",
        "enum": ["TEMPORARY", "PERMANENT", "EMERGENCY", "TRANSIT"],
        "description": "Tipo de albergue"
        },
        "services_offered": {
        "type": "string",
        "maxLength": 500,
        "description": "Servicios ofrecidos"
        }
    },
    "additionalProperties": false
}
